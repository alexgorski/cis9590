<style>div.search{margin-left:10px;}</style>
<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table class="table table-striped table-hover"
  data-toggle="table"
  data-search="true"
  data-search-align="left">
  <thead class="thead-dark">
    <tr>
      <th scope="col" data-sortable="true">Name</th>
      <th scope="col" data-sortable="true">City</th>
      <th scope="col" data-sortable="true">Conference</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.shortname %></td>
        <td><%= team.city %></td>
        <td><%= team.conference.title %></td>
        <td><%= link_to 'Details', team %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path %>
