<p id="notice"><%= notice %></p>

<h1>Players + Coaches</h1>
<input id="q" name="q" type="text" placeholder="Search"/>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position & Details</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= player.position %></td>
        <td><%= link_to player.team? ? player.team.city : "CITY", player.team %></td>
      </tr>
    <% end %>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= link_to coach.name, coach %></td>
        <td>Coach</td>
        <td><%= link_to coach.team.city, coach.team%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

